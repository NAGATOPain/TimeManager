<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include('ejs/resource') %>
        <%- include('ejs/fullcalendar') %>
        <%- calendarScript %>
        <title>Dashboard | <%- APP_NAME%> <%- APP_VERSION %></title>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-1 sidebar text-center">
                    <div id="header" class="row sidebar-header text-center align-items-center">
                        <div class="col-sm p-4">
                            <img class="w-75" src="img/calendar.png" alt="">
                        </div>
                    </div>
                    <% sidebarComponent.forEach(function(element){ %>
                        <div id="<%- element.id %>" class="row sidebar-component mt-2 align-items-center">
                            <div class="col-sm">
                                <img class="w-50" src="<%- element.icon %>" alt="">
                            </div>
                        </div>
                    <% }); %>
                </div>
                <div class="col-sm ">
                    <div class="row topnavbar align-items-center">
                        <div class="col text-left p-2 ">
                            <h4 id="title">
                                <%- title%>
                            </h4>
                        </div>
                        <div class="col p-2">
                            <div class="d-flex justify-content-end">
                                <button id="syncButton" type="button" class="btn btn-success mr-3"><i class="fas fa-sync"></i></button>
                                <form action="/dashboard/signout" method="post">
                                    <button type="submit" class="btn btn-outline-light">Log out</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="row fill-viewport-height">
                        <div id="content" class="col fill-height border p-4">
                            <%- calendarDiv %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
